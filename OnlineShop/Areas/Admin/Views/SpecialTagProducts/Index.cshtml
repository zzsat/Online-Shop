@using OnlineShop.Models;
@model IEnumerable<OnlineShop.Models.ProductTypes>
@{
    ViewData["Title"] = "Index";
}

<br /><br />
<div class="row">
    <div class="col-6">
        <h2 class="text-info">Special Tag List</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" class="btn btn-info"><i class="fa-sharp fa-solid fa-plus">&nbsp; </i></a>
    </div>
</div>
<br/>
<div>
    <table class="table table-striped border" >
        <tr class="table-info">
            <th>
                @Html.DisplayNameFor(expression:c=>c.ProductType)
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductType</td>
                <td>
                    <partial name="_ButtonPartial" model="@item.Id"/>
                </td>
            </tr>
        }
    </table>
</div>

@section scripts{
    <script src="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/alertify.min.js"></script>
    <script type="text/javascript">
        $(function() {
            var save ='@TempData["save"]'
            if(save != null)
            {
                alertify.success(save); // not working
            }
        })
    </script>    
}


